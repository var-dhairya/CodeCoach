{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "installCommand": "npm install --workspaces",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/build/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

